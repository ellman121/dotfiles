# Elliott's .bash_profile
[ -z "$PS1" ] && return

# Stop linuxbrew from complaining about umask
umask 002

##############################
### Environment Management ###
##############################

# Goland Environment
export GOPATH=$HOME/go
export GOBIN=$HOME/go/bin

# Build $PATH.
# This is a bit piecemeal since brew acts very differently on OSX and Linux
# Below is the base path things in the order I like
#   - System bin     /bin
#   - System sbin    /sbin
#   - General bin    /usr/bin
#   - General sbin   /usr/sbin
#   - User bin      ~/bin
BASE_PATH=/bin:/sbin:/usr/bin:/usr/sbin:$HOME/bin:

# OSX specific environment stuff
if [ $(uname) == Darwin ]; then
    # Set Homebrew Cask environment variables
    export HOMEBREW_CASK_OPTS="--appdir=/Applications"

    # Add brew binaries to the path (at least the ones I prefer over the OSX defaults)
    TEX="/Library/TeX/texbin/"                       # LaTeX stuff
    CRL="$(brew --prefix curl)/bin"                  # Curl Executables path
    SSL="$(brew --prefix openssl)/bin"               # Openssl Executables path
    CRE="$(brew --prefix coreutils)/libexec/gnubin"  # Coreutils Executables path
    BRW="$(brew --prefix)/bin:$(brew --prefix)/sbin" # Brew Binaries
    export PATH=$TEX:$CRE:$BRW:$CRL:$SSL:/bin:/sbin:/usr/bin:/usr/sbin:$HOME/bin

    # Set up completion things for homebrew
    if [ -d "/usr/local/etc/bash_completion.d" ]; then
        for x in /usr/local/etc/bash_completion.d/*; do
            source $x
        done
    fi

    alias finder="open"
    alias o.="open ."
fi

# Linux specific environment stuff
if [ $(uname) == Linux ]; then
    export PATH=$BASE_PATH:$HOME/.local/bin

    # If we're on WSL, add a few windows binaries to the path
    if [ -d "/mnt/c/Windows" ]; then
        # I symlink things I like to `~/.msbin` and just add that to the path to minimise clutter
        ln -f -s "/mnt/c/Program Files/Microsoft VS Code/bin/code" ~/.msbin
        export PATH=$PATH:~/.msbin

        alias explorer="/mnt/c/Windows/explorer.exe"
        alias o.="/mnt/c/Windows/explorer.exe ."
    fi

    # Add linuxbrew bins to path
    eval $(/home/linuxbrew/.linuxbrew/bin/brew shellenv)	

    # Completion for linuxbrew
    if [ -d "/home/linuxbrew/.linuxbrew/etc/bash_completion.d/" ]; then
        for x in /home/linuxbrew/.linuxbrew/etc/bash_completion.d/*; do
            source $x
        done
    fi
fi

# Editor
export EDITOR="emacs"

# LS colors
export LS_COLORS='rs=0:di=01;34:ln=01;36:mh=00:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:su=37;41:sg=30;43:ca=30;41:tw=30;42:ow=34;42:st=37;44:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.lzma=01;31:*.tlz=01;31:*.txz=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.dz=01;31:*.gz=01;31:*.lz=01;31:*.xz=01;31:*.bz2=01;31:*.bz=01;31:*.tbz=01;31:*.tbz2=01;31:*.tz=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.war=01;31:*.ear=01;31:*.sar=01;31:*.rar=01;31:*.ace=01;31:*.zoo=01;31:*.cpio=01;31:*.7z=01;31:*.rz=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.svg=01;35:*.svgz=01;35:*.mng=01;35:*.pcx=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.m2v=01;35:*.mkv=01;35:*.ogm=01;35:*.mp4=01;35:*.m4v=01;35:*.mp4v=01;35:*.vob=01;35:*.qt=01;35:*.nuv=01;35:*.wmv=01;35:*.asf=01;35:*.rm=01;35:*.rmvb=01;35:*.flc=01;35:*.avi=01;35:*.fli=01;35:*.flv=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.yuv=01;35:*.cgm=01;35:*.emf=01;35:*.axv=01;35:*.anx=01;35:*.ogv=01;35:*.ogx=01;35:*.aac=00;36:*.au=00;36:*.flac=00;36:*.mid=00;36:*.midi=00;36:*.mka=00;36:*.mp3=00;36:*.mpc=00;36:*.ogg=00;36:*.ra=00;36:*.wav=00;36:*.axa=00;36:*.oga=00;36:*.spx=00;36:*.xspf=00;36:'

####################
### Prompt Setup ###
####################

# Add git versoin to shell prompt
function parse_git_branch {
    ref=$(git symbolic-ref HEAD 2> /dev/null) || return
    revision=$(git rev-parse --short HEAD 2>/dev/null) || return
    echo '\[\033[1;37m\][\[\033[1;31m\]'"${ref#refs/heads/} \[\033[0;33m\]${revision}\[\033[1;37m\]]"
}

function change_ps1 {
    export PS1='\[\033[01;34m\]\n\w'"$(parse_git_branch)"'\n\[\033[01;32m\]\u@\h\[\033[00m\]$ '
}

PROMPT_COMMAND="change_ps1"

#################
### Behaviour ###
#################

# History control
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=5000
HISTFILESIZE=1000

# Make bash check its window size after a process completes
shopt -s checkwinsize

###########################
### Include other files ###
###########################

# Private environment stuff
if [ -f ~/.bash_private ]; then
    source ~/.bash_private
fi

# Get dem aliases
if [ -f ~/.bash_aliases ]; then
	source ~/.bash_aliases
fi

##################################
### Init some shell extensions ###
##################################

# rbenv
if command -v rbenv 1>/dev/null 2>&1; then
	eval "$(rbenv init -)"
fi

# pyenv
if command -v pyenv 1>/dev/null 2>&1; then
	eval "$(pyenv init -)"
	alias brew='env PATH=${PATH//$(pyenv root)\/shims:/} brew'
fi

# Set up thefuck
if command -v thefuck 1>/dev/null 2>&1; then
	eval "$(thefuck --alias)"
fi
